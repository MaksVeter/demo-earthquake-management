{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["ESNext"],
    "types": ["node","express"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules","dist","package.json"]
}
